@model RecipePlatform.MVC.Models.ViewModels.MyRecipesVM

@{
    ViewData["Title"] = "My Recipes";
}

<div class="container my-4">

    @* ✅ عرض رسائل النجاح أو الخطأ *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Welcome, @Model.UserName!</h2>
        <a asp-action="Add" class="btn btn-primary">+ Add New Recipe</a>
    </div>

    <div class="row">
        @if (Model.Recipes != null && Model.Recipes.Any())
        {
            @foreach (var recipe in Model.Recipes)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@recipe.Title</h5>
                            <p class="card-text text-muted">
                                @recipe.Description?.Substring(0, Math.Min(100, recipe.Description.Length))...
                            </p>

                            <div class="mt-auto d-flex justify-content-between">
                                <a asp-action="ViewRecipe" asp-route-id="@recipe.Id" class="btn btn-sm btn-info">View</a>
                                <a asp-action="EditRecipe" asp-route-id="@recipe.Id" class="btn btn-sm btn-warning">Update</a>
                                <form asp-action="DeleteRecipe" asp-route-id="@recipe.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this recipe?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">No recipes found. Start by adding a new recipe!</p>
            </div>
        }
    </div>
</div>
